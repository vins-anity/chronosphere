# =============================================================================
# Chronosphere - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=chronosphere
POSTGRES_PASSWORD=chronosphere
POSTGRES_DB=chronosphere
DATABASE_URL=postgresql://chronosphere:chronosphere@db:5432/chronosphere

# -----------------------------------------------------------------------------
# Port Configuration (optional - defaults shown)
# -----------------------------------------------------------------------------
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Allowed IPs for GSI endpoint (use ["*"] for development)
ALLOWED_IPS=["*"]
