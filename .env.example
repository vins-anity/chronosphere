# =============================================================================
# Chronosphere - Environment Configuration
# =============================================================================
# Copy this file to .env and update values as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=chronosphere
POSTGRES_PASSWORD=chronosphere
POSTGRES_DB=chronosphere
DATABASE_URL=postgresql://chronosphere:chronosphere@db:5432/chronosphere
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# Port Configuration (optional - defaults shown)
# -----------------------------------------------------------------------------
DB_PORT=5432
BACKEND_PORT=8000
FRONTEND_PORT=3000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Allowed IPs for GSI endpoint (use ["*"] for development)
ALLOWED_IPS=["*"]


# -----------------------------------------------------------------------------
# AI KEY
# -----------------------------------------------------------------------------
GEMINI_API_KEY=

# -----------------------------------------------------------------------------
# External API Keys (Contextual Alpha)
# -----------------------------------------------------------------------------
# OpenDota - Free tier (50k/month), no key required for basic usage
OPENDOTA_API_KEY=

# PandaScore - Required for live market odds (1k/month free tier)
# Get key at: https://pandascore.co/
PANDASCORE_API_KEY=

# Stratz - Required for draft analysis
# Get key at: https://stratz.com/api
STRATZ_API_KEY=

# Steam Web API - Required for live pro match tracking
# Get key at: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=

# -----------------------------------------------------------------------------
# Mock Mode (Development)
# -----------------------------------------------------------------------------
# Set to True during development to avoid using API quota
USE_MOCK_ODDS=True
USE_MOCK_CONTEXT=True

# Polling intervals (seconds) - increase to save API calls
MARKET_POLL_INTERVAL_PREGAME=60
MARKET_POLL_INTERVAL_INGAME=30

